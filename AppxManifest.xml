 <?xml version="1.0" encoding="utf-8"?>

<Package

  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"

  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"

  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"

  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10"

  IgnorableNamespaces="uap rescap desktop">


  <Identity

    Name="JafsWorks.Stoffi-S-Mapper"

    Publisher="CN=5A473FF8-33D6-4030-AE98-405496883EF4"

    Version="1.0.4.0" />


  <Properties>

    <DisplayName>Stoffi-S-Mapper</DisplayName>

    <PublisherDisplayName>JafsWorks</PublisherDisplayName>

    <Logo>Assets\StoreLogo.png</Logo>

  </Properties>


  <Dependencies>

    <TargetDeviceFamily Name="Windows.Universal" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />

  </Dependencies>


  <Resources>

    <Resource Language="en-us"/>

  </Resources>


  <Applications>

    <Application Id="StoffiSMapper"

      Executable="s_mapper.exe"

      EntryPoint="Windows.FullTrustApplication">


      <uap:VisualElements

        DisplayName="Stoffi-S-Mapper"

        Description="A versatile tool for remapping keyboard and mouse inputs."

        BackgroundColor="transparent"

        Square150x150Logo="Assets\Square150x150Logo.png"

        Square44x44Logo="Assets\Square44x44Logo.png">

      </uap:VisualElements>

      

      <Extensions>

        <desktop:Extension Category="windows.startupTask" Executable="s_mapper.exe" EntryPoint="Windows.FullTrustApplication">

          <desktop:StartupTask TaskId="SMapperStartup" Enabled="true" DisplayName="Stoffi-S-Mapper" />

        </desktop:Extension>

      </Extensions>


    </Application>

  </Applications>


  <Capabilities>

    <rescap:Capability Name="runFullTrust" />

  </Capabilities>

</Package> 
